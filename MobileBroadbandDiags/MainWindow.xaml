<Window x:Class="MbnDiagnostics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mobile Broadband Diagnostics - Complete System Information" Height="800" Width="1200"
        Background="#F5F5F5" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Mobile Broadband Diagnostics" 
                              FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <ProgressBar Width="100" Height="4" Margin="20,8,0,0" 
                                IsIndeterminate="{Binding IsLoading}" 
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <Button x:Name="RefreshButton" Grid.Column="1" Content="Refresh All Data" Padding="15,5" 
                       Background="#3498DB" Foreground="White" BorderThickness="0"
                       Click="RefreshButton_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">

                <!-- Device Identification Card -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Device Identification" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="IMEI / Device ID:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.DeviceId}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Manufacturer:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.Manufacturer}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Model:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.Model}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="SIM Information" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="SIM ICC ID:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.SimIccId}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Subscriber ID:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.SubscriberId}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Phone Number:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.PhoneNumber}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Interface Details" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="Interface Name:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.Name}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="MAC Address:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.PhysicalAddress}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Firmware:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.Firmware}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Connection Status Card -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Connection Status" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="Interface State:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.State}" Style="{StaticResource ValueStyle}" FontWeight="Bold"/>
                            <TextBlock Text="Register State:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.RegisterState}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Register Mode:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.RegisterMode}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Current APN:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.CurrentApn}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Network Provider" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="Provider Name:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.Provider}" Style="{StaticResource ValueStyle}" FontWeight="Bold"/>
                            <TextBlock Text="Provider ID:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.ProviderId}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Data Class:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.DataClass}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Roaming Status:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.IsRoaming}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Connection Settings" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="Auto Connect:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.AutoConnect}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Data Enabled:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.DataEnabled}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="LTE Attached:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.LteAttached}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Roam Control:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.RoamControl}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Signal Information Card -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Signal Quality" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="Signal Strength:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.SignalDisplay}" Style="{StaticResource ValueStyle}" FontWeight="Bold"/>
                            <TextBlock Text="RSSI Level:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.RssiLevel}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="RSSI (dBm):" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.RssiDbm}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Radio Information" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="Hardware Radio:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.HardwareRadio}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Software Radio:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.SoftwareRadio}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Error Rate:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.ErrorRate}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Device Capabilities" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="Cellular Class:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.CellularClass}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="Voice Class:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.VoiceClass}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Text="SIM Class:" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock Text="{Binding CurrentInterface.SimClass}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Detailed Information Tabs -->
                <Border Style="{StaticResource CardStyle}">
                    <TabControl>
                        <!-- Network Contexts Tab -->
                        <TabItem Header="Provisioned Contexts (APNs)">
                            <DataGrid ItemsSource="{Binding Contexts}" AutoGenerateColumns="False" 
                                     IsReadOnly="True" Margin="10" HeadersVisibility="Column">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                                    <DataGridTextColumn Header="APN" Binding="{Binding Apn}" Width="150"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                                    <DataGridTextColumn Header="IP Type" Binding="{Binding IpType}" Width="80"/>
                                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                        <!-- Available Networks Tab -->
                        <TabItem Header="Available Networks">
                            <DataGrid ItemsSource="{Binding Providers}" AutoGenerateColumns="False" 
                                     IsReadOnly="True" Margin="10" HeadersVisibility="Column">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Provider Name" Binding="{Binding Name}" Width="150"/>
                                    <DataGridTextColumn Header="Provider ID" Binding="{Binding Id}" Width="100"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding State}" Width="200"/>
                                    <DataGridTextColumn Header="Data Class" Binding="{Binding DataClass}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                        <!-- PIN Information Tab -->
                        <TabItem Header="PIN Information">
                            <StackPanel Margin="10">
                                <TextBlock Text="PIN Configuration Details" Style="{StaticResource HeaderStyle}"/>
                                <DataGrid ItemsSource="{Binding PinInfo}" AutoGenerateColumns="False" 
                                         IsReadOnly="True" HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="PIN Type" Binding="{Binding PinType}" Width="120"/>
                                        <DataGridTextColumn Header="Mode" Binding="{Binding PinMode}" Width="100"/>
                                        <DataGridTextColumn Header="State" Binding="{Binding PinState}" Width="80"/>
                                        <DataGridTextColumn Header="Format" Binding="{Binding PinFormat}" Width="80"/>
                                        <DataGridTextColumn Header="Min Length" Binding="{Binding MinLength}" Width="80"/>
                                        <DataGridTextColumn Header="Max Length" Binding="{Binding MaxLength}" Width="80"/>
                                        <DataGridTextColumn Header="Attempts Left" Binding="{Binding AttemptsRemaining}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </TabItem>

                        <!-- SMS Information Tab -->
                        <TabItem Header="SMS Information">
                            <StackPanel Margin="10">
                                <TextBlock Text="SMS Configuration" Style="{StaticResource HeaderStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Ready to Send SMS:" Style="{StaticResource SubHeaderStyle}"/>
                                        <TextBlock Text="{Binding SmsInfo.ReadyToSend}" Style="{StaticResource ValueStyle}"/>
                                        <TextBlock Text="SMS Format:" Style="{StaticResource SubHeaderStyle}"/>
                                        <TextBlock Text="{Binding SmsInfo.SmsFormat}" Style="{StaticResource ValueStyle}"/>
                                        <TextBlock Text="Service Center:" Style="{StaticResource SubHeaderStyle}"/>
                                        <TextBlock Text="{Binding SmsInfo.ServiceCenter}" Style="{StaticResource ValueStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Available Messages:" Style="{StaticResource SubHeaderStyle}"/>
                                        <TextBlock Text="{Binding SmsInfo.AvailableMessages}" Style="{StaticResource ValueStyle}"/>
                                        <TextBlock Text="Message Store Status:" Style="{StaticResource SubHeaderStyle}"/>
                                        <TextBlock Text="{Binding SmsInfo.MessageStoreFull}" Style="{StaticResource ValueStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </Border>

                <!-- System Information Footer -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="System Information" Style="{StaticResource HeaderStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Device Ready State:" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="{Binding CurrentInterface.ReadyState}" Style="{StaticResource ValueStyle}"/>
                                <TextBlock Text="Emergency Mode:" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="{Binding CurrentInterface.EmergencyMode}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="SMS Capability:" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="{Binding CurrentInterface.SmsCapability}" Style="{StaticResource ValueStyle}"/>
                                <TextBlock Text="Control Capability:" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="{Binding CurrentInterface.ControlCapability}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Max Contexts:" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="{Binding CurrentInterface.MaxContexts}" Style="{StaticResource ValueStyle}"/>
                                <TextBlock Text="Last Updated:" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="{Binding CurrentInterface.LastUpdated, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                                          Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>